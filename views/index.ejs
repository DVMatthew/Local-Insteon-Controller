    <div id="addDevice-card">
        <form class="add-form">
            <h4>Add Device</h4>
            <input type="text" name="deviceID">
            <input type="text" name="deviceName">
            <br>
            <button type="submit">
                Add Device
            </button>
        </form>
    </div>

    <div id="device-card">
        <h4>Spotlight</h4>
        <form action="/on" method="POST">
            <input value="5617CC" name="deviceID">
            <button type="submit">On</button>
        </form>
        <form action="/off" method="POST">
            <input value="5617CC" name="deviceID">
            <button type="submit">Off</button>
        </form>
    </div>

    <div id="device-card">
        <h4>Landscape Lights</h4>
        <form action="/on" method="POST">
            <input value="5618B3" name="deviceID">
            <button type="submit">On</button>
        </form>
        <form action="/off" method="POST">
            <input value="5618B3" name="deviceID">
            <button type="submit">Off</button>
        </form>
    </div>

    <div id="device-card">
        <h4>Porch Light</h4>
        <form action="/on" method="POST">
            <input value="43A5CD" name="deviceID">
            <button type="submit">On</button>
        </form>
        <form action="/off" method="POST">
            <input value="43A5CD" name="deviceID">
            <button type="submit">Off</button>
        </form>
    </div>



    <form action="/off" method="POST" >
        <h4>Off</h4>
        <input name="deviceID">
        <button type="submit">Off</button>
    </form>
    <form action="/on" method="POST">
        <h4>On</h4>
        <input name="deviceID">
        <button type="submit">On</button>
    </form>

